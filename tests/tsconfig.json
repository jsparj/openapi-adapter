{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "paths": {
      "@openapi-adapter/core": ["../packages/core"],
      "@openapi-adapter/iterated": ["../packages/iterated"],
      "@openapi-adapter/fetch": ["../packages/fetch"]
    }
  },
  "include": ["./iterated", "./core", "./fetch", "./__mocks__"]
}
