{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": false,
    "strict": true,
  },
  "compileOnSave": true,
  "include": ["./src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
