    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "noLib": false,
    "target": "es2017",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "paths": {
      "@openapi-adapter/core": ["../core"]
